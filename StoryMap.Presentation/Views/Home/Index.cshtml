@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout"; // Using the default layout
}

<div class="container mt-3">
    <div class="row">
        <!-- Content Grid -->
        <div class="row mt-5 pt-5">
            <!-- Create New Item Card -->
            <div class="col-md-4 mb-4">
                <!-- Wrap the card in a clickable link -->
                <a href="@Url.Action("Create", "Story")" class="text-decoration-none">
                    <div class="card text-center card-limited-height">
                        <div class="position-relative">
                            <img src="https://static3.depositphotos.com/1000941/160/i/450/depositphotos_1602106-stock-photo-sign-plus-on-white-background.jpg" class="card-img-top rounded-top faded-image" alt="Card image cap">
                            <div class="overlay">
                                <h5 class="text-white">Create Story</h5>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Story Items (8 Stories) -->
            @for (var i = 0; i < 16; i++)
            {
                <div class="col-md-4 mb-4">
                    <div class="card text-center card-limited-height">
                        <div class="position-relative">
                            <img src="https://atlasoficeandfireblog.wordpress.com/wp-content/uploads/2019/03/arrakis-latitude.png" class="card-img-top rounded-top faded-image" alt="Card image cap">
                            <div class="overlay">
                                <h5 class="text-white">Story Title @i</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function toggleTheme() {
        // JavaScript to toggle theme
        document.body.classList.toggle('dark-theme');
    }
</script>

<style>
    /* Limit the height of all cards */
    .card-limited-height {
        height: auto; /* Set a fixed height for all cards */
        overflow: hidden; /* Hide content that overflows */
    }

    /* Ensure the image is correctly styled with rounded top corners */
    .card-img-top {
        width: 100%;
        height: 200px; /* Fixed height for the image */
        object-fit: cover; /* Ensure the image covers the area without stretching */
        border-radius: 10px 10px 0 0; /* Rounded corners at the top */
        transition: filter 0.3s ease; /* Smooth transition for filter effects */
    }

    /* Style the overlay text area */
    .overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 10;
        color: white;
        padding: 10px;
        background: rgba(0, 0, 0, 0.5); /* Slight black overlay */
        border-radius: 0 0 10px 10px; /* Rounded corners at the bottom */
    }

    /* Style for text within overlay */
    .overlay h5 {
        margin: 0;
        font-size: 16px;
    }

    /* Optional: Add hover effect for cards */
    .card:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease-in-out;
    }

    /* Grayscale effect for the image */
    .faded-image {
        filter: grayscale(100%); /* Apply grayscale filter */
        transition: filter 0.3s ease; /* Smooth transition for grayscale effect */
    }

    /* Hover effect: Remove grayscale on hover */
    .card:hover .faded-image {
        filter: grayscale(0%); /* Remove grayscale on hover */
    }
</style>
